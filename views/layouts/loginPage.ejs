<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../commonPartials/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/loginPage.css">
</head>

<body>
    <% include ../commonPartials/topHeader.ejs %>

    <div class="container-fluid" id="main">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8 col-sm-12 py-5">
                <div class="p-3">
                    <h1>User Login</h1>
                </div>
                <form action="/login" method="POST">
                    <div class="form-group px-3">
                        <label class="p-3" for="emailAddress">Email Address</label>
                        <br>
                        <input class="form-control" id="emailAddress" name="emailAddress" type="email"
                            placeholder="Email Address">
                    </div>
                    <div class="form-group px-3">
                        <label class="p-3" for="password">Password</label>
                        <br>
                        <input class="form-control" id="password" name="password" type="password"
                            placeholder="Password">
                    </div>
                    <div class="form-group p-3 float-right">
                        <button class="btn btn-primary" id="submitBtn" type="submit" disabled>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../commonPartials/footer.ejs %>

    <% include ../commonPartials/script.ejs %>

    <script src="/javascripts/loginPage.js"></script>
</body>

</html>