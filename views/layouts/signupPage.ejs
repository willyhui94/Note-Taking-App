<!DOCTYPE html>
<html lang="en">

<head>
    <% include ../commonPartials/head.ejs %>
    <link rel="stylesheet" href="/stylesheets/signupPage.css">
</head>

<body>
    <% include ../commonPartials/topHeader.ejs %>

    <div class="container-fluid">
        <div class="row justify-content-center">
            <div class="col-lg-4 col-md-8 col-sm-12 py-5">
                <div class="p-3">
                    <h1>User Signup</h1>
                </div>
                <form action="/signup" method="POST">
                    <div class="form-group px-3">
                        <label class="p-3" for="firstName">First Name</label>
                        <br>
                        <input class="form-control px-3" id="firstName" name="firstName" type="text"
                            placeholder="First Name">
                    </div>
                    <div class="form-group px-3">
                        <label class="p-3" for="lastName">First Name</label>
                        <br>
                        <input class="form-control" id="lastName" name="lastName" type="text" placeholder="Last Name">
                    </div>
                    <div class="form-group px-3">
                        <label class="p-3" for="emailAddress">Email Address</label>
                        <br>
                        <input class="form-control" id="emailAddress" name="emailAddress" type="email"
                            placeholder="Email Address">
                    </div>
                    <div class="form-group px-3">
                        <label class="p-3" for="password">Password</label>
                        <br>
                        <input class="form-control" id="password" name="password" type="password"
                            placeholder="Password">
                    </div>
                    <div class="form-group px-3">
                        <label class="p-3" for="passwordConfirm">Password Confirm</label>
                        <br>
                        <input class="form-control" id="passwordConfirm" name="passwordConfirm" type="password"
                            placeholder="Password Confirm">
                    </div>
                    <div class="py-3">
                        <h4 class="text-danger" id="passwordAlert">Password not match</h4>
                    </div>
                    <div class="form-group p-3 float-right">
                        <button class="btn btn-primary" id="submitBtn" type="submit" disabled>Submit</button>
                    </div>
                </form>
            </div>
        </div>
    </div>

    <% include ../commonPartials/footer.ejs %>

    <% include ../commonPartials/script.ejs %>

    <script src="/javascripts/signupPage.js"></script>
</body>

</html>